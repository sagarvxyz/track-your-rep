{
	"compilerOptions": {
		"target": "es2020",
		"strict": true,
		"preserveConstEnums": true,
		"noEmit": true,
		"sourceMap": false,
		"module": "es2015",
		"moduleResolution": "node",
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"baseUrl": "./",
		"paths": {
			"@handlers/*": ["handlers/*"],
			"@lib/*": ["lib/*"]
		}
	},
	"exclude": ["node_modules"]
}
